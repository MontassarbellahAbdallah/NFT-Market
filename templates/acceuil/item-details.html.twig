{% extends 'base.html.twig' %}
{% block body %}


<div class="container">
    <br><br><br>
    <div class="item_details">
        <div class="row sm:space-y-20">
            <div class="col-lg-6">
                <img class="item_img" src="{{asset('uploads/nfts/'~ nft.photo)}}"
                    alt="">
            </div>
            <div class="col-lg-6">
                <div class="space-y-20">
                    <h3>{{nft.titre}}</h3>
                    <div class="d-flex justify-content-between">
                        <div class="space-x-10 d-flex align-items-center">
                            <p>Le nombre d'element de cette article est : {{nft.nombre}}</p>
                            {# <a href="#" class="likes space-x-3">
                                <i class="ri-heart-3-fill"></i>
                                <span class="txt_sm">2.1k</span>
                            </a> #}
                        </div>
                        
                    </div>
                   
                    <div class="box">
                        <div class="space-y-20">
                            <div class="d-flex justify-content-between
                                mb-30_reset">
                                <ul class="nav nav-tabs d-flex space-x-10 mb-30"
                                    role="tablist">
                                    <li class="nav-item">
                                        <a
                                            class="btn btn-white btn-sm active"
                                            data-toggle="tab"
                                            href="#tabs-1"
                                            role="tab">
                                            Description</a>
                                    </li>
                                    
                                </ul>
                               
                            </div>
                            <div class="hr"></div>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tabs-1"
                                    role="tabpanel">
                                    <p>{{nft.description}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="numbers">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="space-y-5">
                                    <p class="color_text">Prix</p>
                                    <h4><span class="txt_sm color_text" id="prix_eth">{{nft.prix}}</span> <span class="txt_sm color_text">
                                            ETH / </span><span class="txt_sm color_text" id="prix_pts">{{prix}}</span> <span class="txt_sm color_text"> pts</span></h4>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                    <div class="hr2"></div>
                    <div class="creators">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="avatars space-x-5">
                                    <div class="media">
                                        <a href="Profile.html">
                                            <img
                                                src="{{asset('assets/img/avatars/avatar_3.png')}}"
                                                alt="Avatar" class="avatar
                                                avatar-sm">
                                        </a>
                                    </div>
                                    <div>
                                        <a href="#">
                                            <p class="avatars_name color_black">{{nft.email}}</p>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="d-flex space-x-20">
                        
                        <a href="#" class="btn btn-grad btn-lg"> Buy Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}