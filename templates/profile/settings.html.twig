                                {{form_widget(form.twitter, {'attr': {'class': 'form-control'}})}}

                                <div class="twitter-btn btn btn-primary mt-20
			                                        btn-sm">
                                    <i class="ri-twitter-fill"></i>
                                    Ajouter votre Twitter
                                </div>

                            </div>
                            <div class="d-flex flex-column">
                                <span class="nameInput mb-10">Discord</span>
                                {{form_widget(form.discord, {'attr': {'class': 'form-control'}})}}

                                <div class="discord-btn btn btn-primary mt-20
			                                        btn-sm">
